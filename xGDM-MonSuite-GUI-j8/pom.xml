<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>xgdm-monsuite-gui-j8</artifactId>
	<packaging>war</packaging>
	<name>xGDM-MonSuite GUI for Java 8</name>

	<parent>
		<groupId>de.grit</groupId>
		<artifactId>xgdm-monsuite-gui</artifactId>
		<version>2.1.3-SNAPSHOT</version>
	</parent>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<grit.warzip.fileName>Monitoring.war</grit.warzip.fileName>
	</properties>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>assembly-warzip</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<!-- <finalName>${project.build.finalName}</finalName> -->
							<appendAssemblyId>false</appendAssemblyId>
							<descriptorRefs>
								<descriptorRef>grit-warzip</descriptorRef>
							</descriptorRefs>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webXml>${project.basedir}\src\main\webapp\WEB-INF\web.xml</webXml>
					<webResources>
						<resource>
							<directory>../</directory>
							<includes>
								<include>LICENSE.md</include>
							</includes>
							<targetPath>WEB-INF/</targetPath>
						</resource>
					</webResources>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>de.grit</groupId>
			<artifactId>xgdm-monsuite-gui-base</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		
		<dependency>
			<groupId>org.postgresql</groupId>
			<artifactId>postgresql</artifactId>
		</dependency>

	</dependencies>
</project>
